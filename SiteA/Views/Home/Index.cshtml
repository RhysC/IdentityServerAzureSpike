@{
    ViewBag.Title = "Home Page";
}
<div class="row"></div>
<div class="container row">
    <dl>
        <dt>Identity Server login</dt>
        <dd>Redirected to identity.demo.local, uses hybrid grant flow</dd>
        <dt>Local login</dt>
        <dd>Site form presented and posted back to server then redirects using code grant flow.</dd>
        <dt>API Calls</dt>
        <dd>Post to MVC action controllers then use code grant flow</dd>
    </dl>
</div>
<br/>
@if (User.Identity.IsAuthenticated)
{
    <h3>Claims</h3>
    <dl>
        @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
        {
            <dt>
                @claim.Type
            </dt>
            <dd>
                @claim.Value
            </dd>
        }
    </dl>
}
