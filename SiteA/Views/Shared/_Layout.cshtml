@using System.Web.Mvc.Html
@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site A</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .jumbotron {
            background-color:azure;
            color: inherit;
            margin-bottom: 30px;
            padding: 30px 15px;
        }
    </style>
</head>
<body>
<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="http://SiteA.demo.local:9556/">Site A</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Identity Server login", "LoginViaIdentityServerCodeFlow", "Home", new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Local login", "LocalLogin", "Home", null, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("MVC controller redirects", "Index", "App", new { @class = "navbar-brand" })</li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Signout", "Signout", "Home", new {@class = "navbar-brand"})</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sites <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="https://identity.demo.local/help">Identity Server</a>
                        </li>
                        <li>
                            <a href="http://SiteB.demo.local:9556/">Site A</a>
                        </li>
                        <li>
                            <a href="http://siteb.demo.local:9557">Site B</a>
                        </li>
                        <li>
                            <a href="http://sitec.demo.local:9557">Site C</a>
                        </li>
                        <li>
                            <a href="https://identity.demo.local/core/permissions">Permissions</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    <div class="jumbotron">
        <h1>Site A</h1>
        @RenderBody()
    </div>
    <footer>
        <p>
            Rendered at <strong>@DateTime.Now.ToLongTimeString()</strong>
        </p>
    </footer>
</div> <!-- /container -->
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>
