@{
    ViewBag.Title = "Home Page";
}
<div class="row"></div>
<div class="container row">
    <dl>
        <dt>Site A, B</dt>
        <dd>Hybrid MVC/Web API</dd>
        <dt>Site C</dt>
        <dd>Hybrid Javascript/WebAPI client - </dd>
        <dt>Site D</dt>
        <dd>Code flow MVC with form posts</dd>
        <dt>Site E</dt>
        <dd>Implicit TypeScript/JavaScript client</dd>
    </dl>
</div>
<br/>
@if (User.Identity.IsAuthenticated)
{
    <h3>Claims</h3>
    <dl>
        @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
        {
            <dt>
                @claim.Type
            </dt>
            <dd>
                @claim.Value
            </dd>
        }
    </dl>
}
